<%- include('parts/header.ejs') %>


</head>

<body id="home">
  <!-- ===================================navbar===================================== -->
  <%- include('parts/navbar.ejs') %>
  <!-- ===================================/navbar===================================== -->
  <div class="container">
      <div class="row">
          <div class="col-md-6 m-auto">
              <div class="post-topbar card m-5">
                  <a class="btn btn-info btn-custom" data-toggle="modal" data-target="#exampleModal" href="">New Post</a>
              </div>
          </div>
      </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header text-center text-white">
                  <h5 class="modal-title " id="exampleModalLabel">Post a text</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span class="text-white" aria-hidden="true">&times;</span>
                  </button>
              </div>
              <form action="/newPost" method="POST" enctype="multipart/form-data">
              <div class="modal-body">
                  
                      <input class="form-control my-3" name="postTitle" placeholder="Enter Title" type="text">
                      <textarea class="form-control" name="postContent" placeholder="Enter Text" cols="30" rows="10"></textarea>
                  
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-info">Post</button>
              </div>
              </form>
          </div>
      </div>
  </div>

  <!-- ==============================posts========================================  -->
  <div class="container">
    <div class="row">
        <%for(let userPost of usersPosts){%>
            <div class="col-md-7  card p-4 auto">
                <div class="post">
                    <div class="media">
                        <img src="images/man.jpg" width="60" class="mr-3" alt="...">
                        
                        <div class="media-body">
                            <h5 class="mt-0 text-capitalize"><%=userPost.userID.firstName%> <%=userPost.userID.lastName%></h5>
                            <%=userPost.publishDate.toLocaleString().split(',')[0]%> - <%=userPost.publishDate.toLocaleString().split(',')[1]%>
                        </div>
                    </div>
                    <hr>
                    <h3><%=userPost.postTitle%></h3>
                    <p class="pt-4"><%=userPost.postContent%></p>
                </div>
            </div>
        <%}%>
  <!-- ==============================/posts========================================  -->

<%- include('parts/footer.ejs') %>